<header class = "navbar navbar-fixed-top navbar-inverse">
  <div class = "container">
    <%= link_to t("views.layouts.header.sample_app"), root_path, id: t("views.layouts.header.logo") %>
    <nav>
      <ul class = "nav navbar-nav navbar-right">
        <li><%= link_to t("views.layouts.header.home"), root_path %></li>
        <li><%= link_to t("views.layouts.header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("views.layouts.header.user"), "#" %></li>
          <li class = "dropdown">
            <a href = "#" class = "dropdown-toggle" data-toggle = "dropdown">
              <%= t "views.layouts.header.account" %> <b class = "caret"></b>
            </a>
            <ul class = "dropdown-menu">
              <li><%= link_to t("views.layouts.header.profile"), current_user %></li>
              <li><%= link_to t("views.layouts.header.setting"), "#" %></li>
              <li class = "divider"></li>
              <li>
                <%= link_to t("views.layouts.header.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("views.layouts.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
