<% if @user.errors.any? %>
  <div id = "error_explanation">
    <div class = "alert alert-danger">
      <%= t "views.shared.error.the" %> <%= pluralize(@user.errors.count, t("views.shared.error.error")) %>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
